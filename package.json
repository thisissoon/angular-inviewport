{
  "name": "@kumanu/angular-inviewport",
  "version": "16.0.0",
  "description": "A simple lightweight library for Angular that detects when an element is within the browser viewport and adds a sn-viewport--in or sn-viewport--out class to the element.",
  "keywords": [
    "angular",
    "directive",
    "viewport",
    "in viewport",
    "scroll",
    "resize",
    "ngx-inviewport",
    "ngx-in-viewport"
  ],
  "author": "SOON_ <dorks@thisissoon.com>",
  "contributors": [
    "Ed Opare-Aryee <ed@thisissoon.com>",
    "Jack matthews <jack@thisissoon.com>",
    "Sergey Krilov <serg.kr@gmail.com>",
    "Mike Behnke <mike@local-pc-guy.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kumanu/angular-inviewport"
  },
  "engines": {
    "node": ">= 14.16.0",
    "npm": ">= 6.14.18"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "npm run stylelint && npm run nglint && npm run prettier",
    "lint:fix": "npm run stylelint -- --fix && npm run nglint -- --fix && npm run prettier -- --write",
    "nglint": "ng lint --quiet",
    "stylelint": "stylelint --syntax scss \"src/**/*.{css,scss}\"",
    "prettier": "prettier --config .prettierrc -l \"src/**/*.{ts,js,json,css,scss}\"",
    "format": "npm run prettier -- --write",
    "e2e": "ng e2e",
    "coverage": "coveralls < coverage/lcov.info",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server.js",
    "build:client-and-server-bundles": "ng build --configuration production && ng run angular-inviewport:server",
    "webpack:server": "webpack --config webpack.server.js --progress --colors",
    "release": "standard-version",
    "postrelease": "npm run packagr",
    "packagr": "ng-packagr -p ng-package.json",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "private": false,
  "peerDependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.4",
    "@angular-eslint/builder": "16.1.0",
    "@angular-eslint/eslint-plugin": "16.1.0",
    "@angular-eslint/eslint-plugin-template": "16.1.0",
    "@angular-eslint/schematics": "16.1.0",
    "@angular-eslint/template-parser": "16.1.0",
    "@angular/animations": "16.1.4",
    "@angular/cli": "16.1.4",
    "@angular/common": "16.1.4",
    "@angular/compiler": "16.1.4",
    "@angular/compiler-cli": "16.1.4",
    "@angular/core": "16.1.4",
    "@angular/platform-browser": "16.1.4",
    "@angular/platform-browser-dynamic": "16.1.4",
    "@angular/platform-server": "16.1.4",
    "@nguniversal/express-engine": "^16.1.1",
    "@types/jasmine": "~4.3.5",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "core-js": "^3.31.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "express": "^4.18.2",
    "husky": "^8.0.0",
    "intersection-observer": "^0.12.2",
    "jasmine-core": "~5.0.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^13.2.3",
    "ng-packagr": "^16.1.0",
    "prettier": "^3.0.0",
    "protractor": "^7.0.0",
    "rxjs": "^7.8.1",
    "standard-version": "^9.5.0",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "webpack": "^5.88.1",
    "zone.js": "~0.13.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,html}": [
      "eslint --fix"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --syntax scss --fix"
    ],
    "src/**/*.{ts,js,json,css,scss}": [
      "prettier --config .prettierrc --write"
    ]
  },
  "dependencies": {
    "tslib": "^2.6.0"
  }
}
